{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "mgba ${workspaceFolderBasename}.gba",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "clear": false
            }
        },
        {
            "label": "debugRun",
            "type": "shell",
            "command": "mgba -g ${workspaceFolderBasename}.elf",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "debugKill",
            "type": "process",
            "command": "${input:terminate}",
        },
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": {
                "label": "debugRun"
            }
        }
    ]
}
